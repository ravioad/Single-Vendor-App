<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="NoActionBarTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MaterialActivity" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimaryDark</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="MaterialActivityWhite" parent="ThemeOverlay.MaterialComponents.Light">
        <item name="colorPrimary">@color/colorPrimaryDark</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_baseline_arrow_back_24</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CustomChipChoice" parent="@style/Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/home_chip_background_selector</item>
        <item name="android:textColor">@color/home_chip_text_color</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/_100ssp</item>
        <item name="android:layout_height">@dimen/_45sdp</item>
        <item name="android:layout_width">@dimen/_90sdp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textAppearance">@style/ChipTextStyle</item>
    </style>

    <style name="ChipTextStyle" parent="TextAppearance.MaterialComponents.Chip">
        <item name="android:textSize">@dimen/_12ssp</item>
    </style>
    <!-- ToolBar -->
    <style name="ToolBarStyle" parent="Theme.MaterialComponents">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="actionMenuTextColor">@android:color/white</item>
    </style>

    <style name="AppbarTitleStyle" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="android:textSize">@dimen/_18ssp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="product_title_style">
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">#686666</item>
        <item name="android:textSize">@dimen/_18ssp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="TransparentMaterialAppbar" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="android:background">@null</item>
        <item name="android:elevation">0dp</item>
    </style>


    <style name="Button.White" parent="ThemeOverlay.AppCompat">
        <item name="colorAccent">@android:color/white</item>
    </style>

    <style name="checkout_dialog_editText_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/_10sdp</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:fontFamily">@font/balsamiq_sans_regular</item>
        <item name="android:ems">10</item>
    </style>

    <style name="tableLayoutValue">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">@dimen/_18ssp</item>
        <item name="android:fontFamily">@font/balsamiq_sans_bold</item>
    </style>
    <style name="tableLayoutKey">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">@dimen/_16ssp</item>
        <item name="android:fontFamily">@font/balsamiq_sans_regular</item>
    </style>
</resources>