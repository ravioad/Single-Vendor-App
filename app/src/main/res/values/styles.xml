<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="NoActionBarTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MaterialActivity" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimaryDark</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CustomChipChoice" parent="@style/Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/home_chip_background_selector</item>
        <item name="android:textColor">@color/home_chip_text_color</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/_100ssp</item>
        <item name="android:layout_height">@dimen/_45sdp</item>
        <item name="android:layout_width">@dimen/_90sdp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textAppearance">@style/ChipTextStyle</item>
    </style>

    <style name="ChipTextStyle" parent="TextAppearance.MaterialComponents.Chip">
        <item name="android:textSize">@dimen/_12ssp</item>
    </style>
    <style name="AppbarTitleStyle" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Button.White" parent="ThemeOverlay.AppCompat">
        <item name="colorAccent">@android:color/white</item>
    </style>
</resources>