<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cart_rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/home_screen_color"
    tools:context=".activities.CartActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/cart_appbarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="end">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/cart_topAppBar"
            style="@style/Widget.MaterialComponents.Toolbar.Primary"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:background="@color/colorPrimaryDark"
            android:gravity="end">

            <TextView
                style="@style/AppbarTitleStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/balsamiq_sans_bold"
                android:gravity="center"
                android:text="Cart" />
        </com.google.android.material.appbar.MaterialToolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <RelativeLayout
        android:id="@+id/cart_topLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/cart_appbarLayout"
        android:paddingHorizontal="@dimen/_10sdp"
        android:paddingVertical="@dimen/_5sdp">

        <TextView
            android:id="@+id/cart_total_items"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:fontFamily="@font/balsamiq_sans_regular"
            android:text="3 Items in Cart"
            android:textSize="@dimen/_15ssp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@id/cart_grand_total"
            android:fontFamily="@font/balsamiq_sans_regular"
            android:text="Total: "
            android:textSize="@dimen/_15ssp" />

        <TextView
            android:id="@+id/cart_grand_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:fontFamily="@font/balsamiq_sans_regular"
            android:text="Rs. 43432"
            android:textColor="#FFDA00"
            android:textSize="@dimen/_15ssp" />


    </RelativeLayout>

    <TextView
        android:id="@+id/cart_empty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="@string/empty_cart"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textSize="@dimen/_14ssp"
        android:visibility="gone" />

    <Button
        android:id="@+id/cart_goto_menu_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/cart_empty"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_10sdp"
        android:backgroundTint="#FFDA00"
        android:text="Go To Menu"
        android:visibility="gone"
        android:textColor="#F96167" />

    <com.chauthai.overscroll.RecyclerViewBouncy
        android:id="@+id/cart_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/cart_topLayout"
        android:paddingStart="@dimen/_12sdp"
        android:paddingEnd="@dimen/_12sdp"
        tools:listitem="@layout/cart_list_item" />

    <Button
        android:id="@+id/cart_order_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/_20sdp"
        android:background="@drawable/intro_getstarted_button_style"
        android:text="Confirm Order" />
</RelativeLayout>